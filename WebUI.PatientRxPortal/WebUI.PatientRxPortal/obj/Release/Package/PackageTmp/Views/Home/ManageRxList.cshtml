@model List<DataContracts.PatientPortal.RxData>

<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/buttons.bootstrap4.min.css" rel="stylesheet" />
@*<script src="~/Scripts/DataTablePlugins/moment.js"></script>
<script src="~/Scripts/DataTablePlugins/datetime-moment.js"></script>*@

<style type="text/css">
    tfoot input {
        width: 100%;
        padding: 3px;
        box-sizing: border-box;
        /*display: table-header-group;*/
    }

    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>


<table id="grdPortalRx" class="table table-striped table-bordered" cellspacing="0" style="width:100%;">
    <thead>
        <tr>
            <th>Rx Data ID</th>
            <th>Rx Date</th>
            <th>Rx Doctor</th>
            <th>Prescription 1</th>
            <th>Prescription 2</th>
            <th>Prescription 3</th>
            <th>Prescription 4</th>
            <th>Prescription 5</th>            
            <th></th>			
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RxData_ID)</td>
                <td>@Html.DisplayFor(modelItem => item.RxDate)</td>
                <td>@Html.DisplayFor(modelItem => item.RxDoctor)</td>
                <td>@Html.DisplayFor(modelItem => item.Prescription1)</td>
                <td>@Html.DisplayFor(modelItem => item.Prescription2)</td>
                <td>@Html.DisplayFor(modelItem => item.Prescription3)</td>
                <td>@Html.DisplayFor(modelItem => item.Prescription4)</td>
                <td>@Html.DisplayFor(modelItem => item.Prescription5)</td>                                
                <td><a href="#" target="_self" onclick="return EditRx(@Html.DisplayFor(modelItem => item.RxData_ID));">Edit Rx</a></td>                
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">


    $(document).ready(function () {

        //fix for window resize error for datatable in IE
        $(window).unbind("resize.DT-" + "grdPortalRx");

        var table = $('#grdPortalRx').DataTable(
            {
                "searching": true,
                processing: true,
                "order": [[1, "desc"]],
                "pagingType": "full_numbers",
                "language": {                    //Custom Message Setting
                    "lengthMenu": "Display _MENU_ records per page",    //Customizing menu Text
                    "zeroRecords": "Nothing found",             //Customizing zero record text - filtered
                    "info": "Showing page _PAGE_ of _PAGES_",           //Customizing showing record no
                    "infoEmpty": "No records available",                //Customizing zero record message - base
                    "infoFiltered": "(filtered from _MAX_ total records)"   //Customizing filtered message
                },
                //"dom": '<"toolbar">frtip',
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    },                  
                ],
            });

    });
</script>